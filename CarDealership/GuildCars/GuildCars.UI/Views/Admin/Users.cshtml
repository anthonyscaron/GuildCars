@model List<GuildCars.Models.Query.AdminUserRequestItem>
@{
    ViewBag.Title = "Admin - Users";
}

<div class="col-xs-12">
    <div class="row">
        <div class="col-xs-12">
            <h1>Users</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <h4>@Html.ActionLink("Add a new User", "AddUser", "Admin")</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12" id="styleBorder">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Last Name</th>
                        <th>First Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var user in Model)
                    {
                        <tr>
                            <td>@user.LastName</td>
                            <td>@user.FirstName</td>
                            <td>@user.Email</td>
                            <td>@user.Role</td>
                            <td><a href="@Url.Action("EditUser", "Admin", new { id = user.UserId })">edit</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>